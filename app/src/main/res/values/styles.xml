<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="Toolbar.MyStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!-- 设置Toolbar菜单文字的大小  -->
    <style name="ToolbarTheme" parent="AppTheme.AppBarOverlay">
        <item name="actionMenuTextColor">@android:color/white</item> <!--颜色-->
        <item name="android:textSize">14sp</item> <!--字体大小-->
    </style>

